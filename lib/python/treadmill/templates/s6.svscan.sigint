#!{{ _alias.execlineb }} -P

{{ _alias.redirfd }} -r 0 /dev/null
{{ _alias.fdmove }} -c 2 1

{{ _alias.foreground }} {
    {{ _alias.echo }} "Received SIGINT"
}

{% if monitor_service -%}
{{ _alias.foreground }} {
    {{ _alias.s6_svc }} -k -wD "{{ monitor_service }}"
}
{% endif -%}

# SIGINT : acts as if a s6-svscanctl -6 command had been received.
{{ _alias.s6_svscanctl }} -6 .
