{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "resource_id": {
        "type": "string",
        "format": "hostname"
    },
    "resource": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "cell": {
                "$ref": "common.json#/cell"
            },
            "traits": {
                "type": "array",
                "items": { "$ref": "common.json#/trait" }
            },
            "partition": {
                "$ref": "common.json#/partition"
            },
            "parameters": {
                "type": "array",
                "items": { "$ref": "common.json#/parameter" }
            }
        }
    },
    "verbs": {
        "create": {
            "required": []
        },
        "update": {
            "required": []
        }
    }
}
